          android:versionName="0.0.1-SNAPSHOT"
          package="com.zawadz88.realestate">

    <uses-sdk android:minSdkVersion="8"
              android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:name=".RealEstateApplication" android:label="@string/app_name" >

        <activity android:name=".MainActivity" android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".AdsActivity" android:theme="@style/Theme.Realestate" />
        <activity android:name=".ArticleActivity" android:theme="@style/Theme.Realestate" />

    </application>
</manifest>