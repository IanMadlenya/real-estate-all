<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp"
              android:gravity="center">

    <com.zawadz88.realestate.view.FixedAspectRatioImageView
            xmlns:app="http://schemas.android.com/apk/res/com.zawadz88.realestate"
            android:id="@+id/gridview_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/offer_sample"
            android:scaleType="centerCrop"
            android:background="#00ff00"
            android:layout_gravity="center"
            app:ratio="1.77"/>

    <TextView
            android:id="@+id/gridview_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textSize="@dimen/re_gridview_item_title_font_size"
            android:textColor="@android:color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="#88333333"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom|center_horizontal"/>

</FrameLayout>