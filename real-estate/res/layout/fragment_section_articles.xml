<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.astuetz.viewpager.extensions.PagerSlidingTabStrip
            xmlns:app="http://schemas.android.com/apk/res/com.zawadz88.realestate"
            android:id="@+id/article_tabs"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="48dip"
            android:background="@android:color/white"
            app:tabBackground="@drawable/re_background_tab"
            app:indicatorColor="@color/re_color_orange"
            app:shouldExpand="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/articles_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_tabs">
    </android.support.v4.view.ViewPager>

</RelativeLayout>